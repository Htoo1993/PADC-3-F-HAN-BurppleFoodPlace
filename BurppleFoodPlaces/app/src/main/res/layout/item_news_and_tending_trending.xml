<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_trending_item_2_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/tv_trending_title_trending"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item2" />

        <TextView
            android:id="@+id/tv_trending_item_2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_trending_item_2_2"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_trending_item_2_2"
            android:text="Nesuto"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_trending_item_2_far_away_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_trending_item_2_2"
            android:layout_below="@id/tv_trending_item_2_2"
            android:text="Far Away" />

    </RelativeLayout>
</android.support.v7.widget.CardView>