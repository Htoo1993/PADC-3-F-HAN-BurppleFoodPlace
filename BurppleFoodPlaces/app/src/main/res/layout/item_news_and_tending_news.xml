<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_news_and_trending_news_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item1" />

        <TextView
            android:id="@+id/tv_news_and_trending_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_news_and_trending_news_image"
            android:text="Sushi Kimura"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_news_and_trending_news_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_news_and_trending_news_item_title"
            android:layout_below="@id/tv_news_and_trending_news_item_title"
            android:text="Far Away"
            android:textColor="#808080" />
    </RelativeLayout>
</android.support.v7.widget.CardView>