<?xml version="1.0" encoding="utf-8"?>
<xyz.htooaungnaing.burpplefoodplaces.viewpods.LoginUserViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_login_view_pod_height">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/drawer_background"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/iv_login_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dummy_user_picture"
        />

</xyz.htooaungnaing.burpplefoodplaces.viewpods.LoginUserViewPod>