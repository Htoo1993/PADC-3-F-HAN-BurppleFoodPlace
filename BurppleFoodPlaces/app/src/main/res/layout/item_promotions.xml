<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_promotions"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/promotions" />

        <TextView
            android:id="@+id/tv_promotions_burpple_exclusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:background="@drawable/promotions_burpple_exclusive_shape"
            android:padding="4dp"
            android:text="BURPPLE EXCLUSIVE"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_promotions_content"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_promotions_burpple_exclusive"
            android:layout_centerHorizontal="true"
            android:text="1-for-1 Shabu Burger"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_promotions_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_promotions"
            android:layout_below="@id/tv_promotions_content"
            android:layout_marginTop="24dp"
            android:text="________________"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_promotions_burpple_exclusive"
            android:layout_below="@id/tv_promotions_divider"
            android:layout_marginTop="8dp"
            android:text="TILL 31ST JAN 18"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_promotions"
            android:layout_below="@id/iv_promotions"
            android:background="@drawable/promotions_footer_shape"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_promotions_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wildfire Chicken &amp; B...."
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_promotions_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kent Ridge"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>